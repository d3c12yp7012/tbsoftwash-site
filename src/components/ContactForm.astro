<section class="py-20 bg-gradient-to-r from-gray-900 to-gray-800 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-gray-300">Contact us for a free, no-obligation estimate</p>
    </div>
    
    <form id="contact-form" class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto" action="https://api.netlify.com/api/v1/forms/contact-form/submissions" method="POST">
      <input type="hidden" name="form-name" value="contact-form" />
      
      <div>
        <label class="block text-sm font-semibold mb-2">Full Name *</label>
        <input 
          type="text" 
          name="name"
          placeholder="Your Name" 
          required
          class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white placeholder-gray-400 transition" 
        />
      </div>
      
      <div>
        <label class="block text-sm font-semibold mb-2">Phone Number *</label>
        <input 
          type="tel" 
          name="phone"
          placeholder="(727) 555-0000" 
          required
          class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white placeholder-gray-400 transition" 
        />
      </div>
      
      <div>
        <label class="block text-sm font-semibold mb-2">Email *</label>
        <input 
          type="email" 
          name="email"
          placeholder="your@email.com" 
          required
          class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white placeholder-gray-400 transition" 
        />
      </div>
      
      <div>
        <label class="block text-sm font-semibold mb-2">Service Needed *</label>
        <select name="service" required class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white transition">
          <option value="">Select a Service</option>
          <option value="house-wash">House Washing</option>
          <option value="roof-clean">Roof Cleaning</option>
          <option value="window-clean">Window Cleaning</option>
          <option value="gutter-clean">Gutter Cleaning</option>
          <option value="paver-seal">Paver Sealing</option>
          <option value="graffiti">Graffiti Removal</option>
          <option value="other">Other</option>
        </select>
      </div>
      
      <div>
        <label class="block text-sm font-semibold mb-2">Location / Area</label>
        <input 
          type="text" 
          name="location"
          placeholder="City or Address" 
          class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white placeholder-gray-400 transition" 
        />
      </div>
      
      <div>
        <label class="block text-sm font-semibold mb-2">Property Type</label>
        <select name="property-type" class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white transition">
          <option value="">Select Type</option>
          <option value="residential">Residential</option>
          <option value="commercial">Commercial</option>
          <option value="industrial">Industrial</option>
        </select>
      </div>
      
      <div class="md:col-span-2">
        <label class="block text-sm font-semibold mb-2">Message</label>
        <textarea 
          name="message"
          rows="5" 
          placeholder="Tell us more about your project..." 
          class="w-full p-4 rounded-lg bg-gray-700 border border-gray-600 focus:border-blue-500 focus:outline-none text-white placeholder-gray-400 resize-vertical transition" 
        ></textarea>
      </div>
      
      <div class="md:col-span-2 flex items-center">
        <input type="checkbox" name="privacy" id="privacy" class="rounded mr-3" required />
        <label for="privacy" class="text-sm text-gray-300">
          I agree to be contacted about my estimate
        </label>
      </div>
      
      <button type="submit" class="md:col-span-2 bg-blue-600 text-white py-4 px-8 rounded-lg font-bold text-xl hover:bg-blue-700 transition transform hover:scale-105 w-full">
        Send Message
      </button>
    </form>
    
    <div class="mt-12 grid md:grid-cols-3 gap-8 text-center max-w-2xl mx-auto">
      <div>
        <p class="text-2xl font-bold text-blue-400">üìû</p>
        <p class="font-semibold mt-2">(727) 641-1296</p>
      </div>
      <div>
        <p class="text-2xl font-bold text-blue-400">üìç</p>
        <p class="font-semibold mt-2">Clearwater, FL</p>
      </div>
      <div>
        <p class="text-2xl font-bold text-blue-400">‚ö°</p>
        <p class="font-semibold mt-2">24h Response</p>
      </div>
    </div>
  </div>
</section>
