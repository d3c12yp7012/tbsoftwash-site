---
interface PricingTier {
  name: string;
  price: string;
  unit: string;
  description: string;
  features: string[];
  popular?: boolean;
}

const tiers: PricingTier[] = [
  {
    name: 'House Wash',
    price: '0.40',
    unit: '/sq ft',
    description: 'Starting at',
    features: ['Soft wash technique', 'Siding & trim', 'Pressure wash driveway', 'Free estimate']
  },
  {
    name: 'Roof Soft Wash',
    price: '0.65',
    unit: '/sq ft',
    description: 'Starting at',
    features: ['Algae & moss removal', 'Gentle treatment', 'Prevents damage', 'Free estimate'],
    popular: true
  },
  {
    name: 'Full House Package',
    price: 'Save 20%',
    unit: 'Bundle',
    description: 'Most Popular',
    features: ['House wash', 'Roof cleaning', 'Gutter cleaning', 'Window cleaning', 'Free estimate']
  }
];
---

<section class="py-20 bg-gradient-to-r from-gray-900 to-gray-800 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Transparent Pricing</h2>
      <p class="text-xl text-gray-300">No surprises. Professional rates with bundle discounts.</p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {tiers.map((tier, index) => (
        <div class={`relative p-8 rounded-2xl shadow-2xl transition-transform hover:scale-105 ${tier.popular ? 'border-4 border-blue-500 bg-gray-800' : 'border border-gray-700 bg-gray-800'}`}>
          {tier.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-blue-500 px-4 py-1 rounded-full text-sm font-bold whitespace-nowrap">
              Most Popular
            </div>
          )}
          
          <h3 class="text-2xl font-bold mb-4">{tier.name}</h3>
          <div class="mb-4">
            <span class={`text-4xl font-bold ${tier.popular ? 'text-blue-400' : 'text-green-400'}`}>
              {tier.price}
            </span>
            <span class="text-gray-400">{tier.unit}</span>
          </div>
          <p class="text-gray-400 mb-6">{tier.description}</p>
          
          <div class="border-t border-gray-700 pt-6 mb-6">
            <ul class="space-y-3">
              {tier.features.map((feature) => (
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-green-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <button class={`w-full py-3 px-6 rounded-lg font-semibold transition ${tier.popular ? 'bg-blue-600 hover:bg-blue-700' : 'bg-gray-700 hover:bg-gray-600'}`}>
            Get Quote
          </button>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="/pricing" class="text-blue-400 hover:text-blue-300 transition font-semibold">View Full Pricing & Calculator â†’</a>
    </div>
  </div>
</section>
