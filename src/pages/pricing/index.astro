---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const pricing = [
  { service: 'House Washing', rate: '$0.40', unit: 'per sq ft', min: '$300 minimum' },
  { service: 'Roof Soft Wash', rate: '$0.65', unit: 'per sq ft', min: '$500 minimum' },
  { service: 'Window Cleaning', rate: '$1-3', unit: 'per window', min: '$150 minimum' },
  { service: 'Gutter Cleaning', rate: '$150-350', unit: 'per cleaning', min: 'Contact for quote' },
  { service: 'Paver Sealing', rate: '$0.50-1.00', unit: 'per sq ft', min: '$300 minimum' },
  { service: 'Graffiti Removal', rate: 'Custom', unit: 'by quote', min: '$200 minimum' },
];

const bundles = [
  {
    name: 'Complete Home Package',
    discount: '20% OFF',
    includes: ['House Wash', 'Roof Clean', 'Gutters', 'Windows'],
    price: 'Call for Quote'
  },
  {
    name: 'Seasonal Maintenance',
    discount: '15% OFF',
    includes: ['Quarterly Services', 'Priority Scheduling', 'Dedicated Team'],
    price: 'Custom Quote'
  },
  {
    name: 'Commercial Contract',
    discount: 'Custom',
    includes: ['Monthly Services', 'Flexible Scheduling', 'Account Manager'],
    price: 'Custom Quote'
  }
];
---

<BaseLayout 
  title="Pricing | Tampa Bay Soft Wash"
  description="Transparent pricing for pressure washing and soft wash services in the Tampa Bay area"
>
  <Navigation />
  
  {/* Hero */}
  <section class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl md:text-6xl font-bold mb-4">Transparent Pricing</h1>
      <p class="text-xl text-blue-100">No hidden fees. Professional rates with bundle discounts.</p>
    </div>
  </section>
  
  {/* Pricing Table */}
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Service Pricing</h2>
      
      <div class="overflow-x-auto mb-16">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-100 border-b-2 border-gray-300">
              <th class="px-6 py-4 text-left font-bold text-gray-900">Service</th>
              <th class="px-6 py-4 text-left font-bold text-gray-900">Rate</th>
              <th class="px-6 py-4 text-left font-bold text-gray-900">Unit</th>
              <th class="px-6 py-4 text-left font-bold text-gray-900">Minimum</th>
            </tr>
          </thead>
          <tbody>
            {pricing.map((item, index) => (
              <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                <td class="px-6 py-4 font-semibold text-gray-900">{item.service}</td>
                <td class="px-6 py-4 text-2xl font-bold text-blue-600">{item.rate}</td>
                <td class="px-6 py-4 text-gray-600">{item.unit}</td>
                <td class="px-6 py-4 text-gray-600">{item.min}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      
      <div class="bg-blue-50 border-l-4 border-blue-600 p-6 rounded mb-16">
        <h3 class="font-bold text-gray-900 mb-2">ðŸ’¡ Pricing Note</h3>
        <p class="text-gray-700">Final pricing depends on property size, condition, and accessibility. We provide free estimates for all projects. Seasonal promotions and discounts available for regular customers.</p>
      </div>
    </div>
  </section>
  
  {/* Bundle Packages */}
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Bundle Packages</h2>
      
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {bundles.map((bundle) => (
          <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
            <div class="bg-blue-100 text-blue-600 px-4 py-2 rounded-full inline-block font-bold mb-4">
              {bundle.discount}
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 mb-6">{bundle.name}</h3>
            
            <ul class="space-y-3 mb-8">
              {bundle.includes.map((item) => (
                <li class="flex items-center text-gray-700">
                  <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            
            <p class="text-3xl font-bold text-blue-600 mb-6">{bundle.price}</p>
            
            <button class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
              Get Quote
            </button>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  {/* Pricing Calculator */}
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Quick Price Calculator</h2>
      
      <div class="bg-gray-50 p-8 rounded-xl">
        <p class="text-gray-700 mb-8">Select your service and property size for an instant estimate:</p>
        
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block font-semibold text-gray-900 mb-2">Service Type</label>
              <select class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                <option>Select Service</option>
                <option>House Washing</option>
                <option>Roof Cleaning</option>
                <option>Window Cleaning</option>
              </select>
            </div>
            
            <div>
              <label class="block font-semibold text-gray-900 mb-2">Square Footage</label>
              <input type="number" placeholder="e.g., 3000" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />
            </div>
          </div>
          
          <button type="button" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
            Calculate Estimate
          </button>
        </form>
        
        <p class="text-gray-600 text-sm mt-4">*This is an estimate. Final pricing provided after free on-site quote.</p>
      </div>
    </div>
  </section>
  
  <Footer />
</BaseLayout>
