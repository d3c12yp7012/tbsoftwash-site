---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const galleryItems = [
  { before: '/images/before1.jpg', after: '/images/after1.jpg', title: 'Residential House Wash', category: 'House Washing' },
  { before: '/images/before2.jpg', after: '/images/after2.jpg', title: 'Roof Cleaning - Before/After', category: 'Roof Cleaning' },
  { before: '/images/before3.jpg', after: '/images/after3.jpg', title: 'Driveway Transformation', category: 'Pressure Washing' },
  { before: '/images/before4.jpg', after: '/images/after4.jpg', title: 'Commercial Building Facade', category: 'Commercial' },
  { before: '/images/before5.jpg', after: '/images/after5.jpg', title: 'Pool Deck Cleaning', category: 'Residential' },
  { before: '/images/before6.jpg', after: '/images/after6.jpg', title: 'Gutter & Soffit Cleaning', category: 'Residential' },
];
---

<BaseLayout 
  title="Gallery | Tampa Bay Soft Wash"
  description="Before and after photos of our professional cleaning work in the Tampa Bay area"
>
  <Navigation />
  
  {/* Hero */}
  <section class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl md:text-6xl font-bold mb-4">Our Work</h1>
      <p class="text-xl text-blue-100">See the stunning results of our professional cleaning services</p>
    </div>
  </section>
  
  {/* Gallery */}
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {galleryItems.map((item) => (
          <div class="group rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 bg-white">
            <div class="grid grid-cols-2 h-96">
              {/* Before */}
              <div class="relative bg-gray-300 overflow-hidden">
                <div class="w-full h-full bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
                  <span class="text-white font-bold">BEFORE</span>
                </div>
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all flex items-center justify-center">
                  <span class="text-white font-bold text-sm md:text-base opacity-0 group-hover:opacity-100 transition">BEFORE</span>
                </div>
              </div>
              
              {/* After */}
              <div class="relative bg-gray-300 overflow-hidden">
                <div class="w-full h-full bg-gradient-to-br from-green-300 to-green-400 flex items-center justify-center">
                  <span class="text-white font-bold">AFTER</span>
                </div>
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-all flex items-center justify-center">
                  <span class="text-white font-bold text-sm md:text-base opacity-0 group-hover:opacity-100 transition">AFTER</span>
                </div>
              </div>
            </div>
            
            {/* Caption */}
            <div class="bg-gray-50 p-6">
              <h3 class="font-bold text-gray-900 text-lg mb-2">{item.title}</h3>
              <p class="text-sm text-gray-600">{item.category}</p>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <p class="text-gray-700 mb-6">These are real before and after photos from our satisfied customers.</p>
        <a href="/contact" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
          Get Your Free Estimate
        </a>
      </div>
    </div>
  </section>
  
  <Footer />
</BaseLayout>
